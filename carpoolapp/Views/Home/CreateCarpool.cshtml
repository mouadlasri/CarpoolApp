
@{
    ViewData["Title"] = "CreateCarpool";
}
@model carpoolapp.ViewModels.CarpoolsAddViewModel

<div class="container" style="margin-top: 80px;">
    <div class="card">

        <h5 class="card-header info-color white-text text-center py-4">
            <strong>Fill in the form to create a new carpool!</strong>
        </h5>

        <!--Card content-->
        <div class="card-body px-lg-5 pt-0">

            <!-- Form -->
            <form class="text-center" style="color: #757575;" asp-controller="Home" asp-action="CreateCarpool" method="post">

                <div class="form-row">
                    <div class="col">
                        <!-- Departure -->
                        <div class="md-form">
                            <input asp-for="@Model.NewTrip.Departure" type="text" id="create-carpool-departure" class="form-control" required>
                            <label for="create-carpool-departure">Departure</label>
                        </div>
                    </div>
                    <div class="col">
                        <!-- Destination -->
                        <div class="md-form">
                            <input asp-for="@Model.NewTrip.Destination" type="text" id="create-carpool-destination" class="form-control" required>
                            <label for="create-carpool-destination">Destination</label>
                        </div>
                    </div>
                </div>

                <!-- Meeting place -->
                <div class="md-form mt-0">
                    <input asp-for="@Model.NewTrip.MeetingPlace" type="text" id="create-carpool-meetingplace" class="form-control" required>
                    <label for="create-carpool-meetingplace">Meeting place</label>
                </div>


                <div class="form-row">
                    <div class="col">
                        <!-- Price -->
                        <div class="md-form">
                            <input asp-for="@Model.NewTrip.Price" type="number" min="1" max="500" step="0.50" id="create-carpool-price" class="form-control" required>
                            <label for="create-carpool-price">Price</label>
                        </div>
                    </div>
                    <div class="col">
                        <!-- Smoke free -->
                        <div class="md-form">
                            <select  asp-for="@Model.NewTrip.SmokeFree" class="custom-select form-control" id="inputGroupSelect02" placeholder="Smoke free?">
                                <option value="Y">Smoke Free</option>
                                <option value="N">Not Smoke Free</option>
                            </select>
                            @*<input asp-for="@Model.NewTrip.SmokeFree" type="text" id="create-carpool-smokefree" class="form-control">*@
                            <label for="create-carpool-smokefree"></label>
                        </div>
                    </div>
                    <div class="col">
                        <!-- Number of seats -->
                        <div class="md-form">
                            <input asp-for="@Model.NewTrip.NbrOfMaxSeats" type="number" min="1" max="5" id="create-carpool-numberseats" class="form-control" required>
                            <label for="create-carpool-numberseats">Number of seats</label>
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col">
                        <!-- Departure date -->
                        <div class="md-form">
                            <input asp-for="@Model.NewTrip.DepartureDate" placeholder="Selected time" type="date" min="2019-12-07" id="create-carpool-date" class="form-control" required>
                            <label for="create-carpool-date">Select date</label>
                        </div>
                    </div>
                    <div class="col">
                        <!-- Departure time -->
                        <div class="md-form">
                            <input asp-for="@Model.NewTrip.DepartureTime" placeholder="Selected time" type="time" id="create-carpool-departuretime" class="form-control" required>
                            <label for="create-carpool-departuretime">Select time</label>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>


            </form>
            <!-- Form -->

        </div>

    </div>

</div>
