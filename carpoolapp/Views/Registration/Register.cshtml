
@{
    ViewData["Title"] = "Register";
}

@model carpoolapp.ViewModels.RegisterUserViewModel


<div class="container" style="margin-top: 60px;">
    <div class="row">
        <div class="col-md-9" style="margin: 0 auto;">
            <div class="card">

                <h5 class="card-header info-color white-text text-center py-4">
                    <strong>Sign up</strong>
                </h5>

                <!--Card content-->
                <div class="card-body px-lg-5 pt-0">

                    <!-- Form -->
                    <form class="text-center" style="color: #757575;" asp-controller="Registration" asp-action="Register">
                        <div class="md-form mt-3 ">
                            <!-- Username -->
                            <input asp-for="newCredentials.Username" type="text" id="register-username" class="form-control" maxlength="15" required>
                            <label for="register-username">Username</label>
                            @if (ViewBag.Message != null)
                            {
                                <p style="color: red;">@ViewBag.Message</p>
                            }
                        </div>

                        <div class="form-row">

                            <div class="col">
                                <!-- First name -->
                                <div class="md-form">
                                    <input asp-for="newAppUser.FirstName" type="text" id="register-firstname" class="form-control" maxlength="15" required>
                                    <label for="register-firstname">First name</label>
                                </div>
                            </div>
                            <div class="col">
                                <!-- Last name -->
                                <div class="md-form">
                                    <input asp-for="newAppUser.LastName" type="text" id="register-lastname" class="form-control" maxlength="15" required>
                                    <label for="register-lastname">Last name</label>
                                </div>
                            </div>
                        </div>

                        <!-- E-mail -->
                        <div class="md-form mt-0">
                            <input asp-for="newAppUser.EmailAddress" type="email" id="register-email" class="form-control" maxlength="25" required>
                            <label for="register-email">E-mail</label>
                        </div>

                        <!-- Password -->
                        <div class="md-form">
                            <input asp-for="newCredentials.UserPassword" type="password" id="register-password" class="form-control" maxlength="15" required>
                            <label for="register-password">Password</label>
                            </small>
                        </div>

                        <!-- Phone number -->
                        <div class="md-form">
                            <input asp-for="newAppUser.PhoneNumber" type="number" id="register-phonenumber" class="form-control " min="0" max="9999999999" required>
                            <label for="register-phonenumber">Phone number</label>

                        </div>


                        <!-- Sign up button -->
                        <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Sign in</button>

                        <!-- Social register -->
                        <p>Already have an account?  <a asp-controller="Registration" asp-action="Login">Sign up</a></p>

                        <hr>

                        <!-- Terms of service -->
                        <p>
                            By clicking
                            <em>Sign up</em> you agree to our
                            <a href="#" >terms of service</a>
                        </p>
                    </form>
                    <!-- Form -->

                </div>

            </div>
        </div>
    </div>

</div>
<!-- Material form register -->
